        <Grid
            x:Name="WinOverlay"
            IsVisible="false"
            VerticalOptions="Center"
            ZIndex="2">

            <Frame
                Grid.Row="0"
                Grid.Column="0"
                BackgroundColor="Grey"
                HeightRequest="1000"
                Opacity="0.6"
                WidthRequest="2000" />


            <Frame
                Grid.Row="0"
                Grid.Column="0"
                BackgroundColor="#e4ffdc"
                HeightRequest="300"
                Opacity="1"
                WidthRequest="400">
                <!--  Button will be an x  -->
                <VerticalStackLayout Spacing="15">
                    <FlexLayout Direction="Row" VerticalOptions="Center">

                        <Label
                            FlexLayout.Grow="1"
                            FontSize="Medium"
                            HorizontalTextAlignment="Center"
                            Text="Statistics"
                            VerticalTextAlignment="Center" />

                        <Button
                            x:Name="CloseOverlay"
                            BackgroundColor="Transparent"
                            BorderColor="Transparent"
                            Clicked="Close_Overlay_ButtonClicked"
                            FontSize="Medium"
                            Text="X"
                            TextColor="Grey" />
                    </FlexLayout>


                    <Grid
                        ColumnDefinitions="*,*,*,*"
                        ColumnSpacing="15"
                        HorizontalOptions="Center"
                        RowDefinitions="*,*">
                        <Label
                            x:Name="GamesPlayedLabel"
                            Grid.Row="0"
                            Grid.Column="0"
                            FontSize="Medium"
                            HorizontalOptions="Center"
                            Text="{Binding GamesPlayed}" />
                        <Label
                            x:Name="WinPercentageLabel"
                            Grid.Row="0"
                            Grid.Column="1"
                            FontSize="Medium"
                            HorizontalOptions="Center"
                            Text="{Binding WinPercentage}" />
                        <Label
                            x:Name="CurrentStreakLabel"
                            Grid.Row="0"
                            Grid.Column="2"
                            FontSize="Medium"
                            HorizontalOptions="Center"
                            Text="{Binding CurrentStreak}" />
                        <Label
                            x:Name="MaxStreakLabel"
                            Grid.Row="0"
                            Grid.Column="3"
                            FontSize="Medium"
                            HorizontalOptions="Center"
                            Text="{Binding LongestStreak}" />

                        <Label
                            x:Name="GamesPlayedTitle"
                            Grid.Row="1"
                            Grid.Column="0"
                            FontSize="Micro"
                            HorizontalOptions="Center"
                            Text="Played" />
                        <Label
                            x:Name="WinPercentageTitle"
                            Grid.Row="1"
                            Grid.Column="1"
                            FontSize="Micro"
                            HorizontalOptions="Center"
                            Text="Win %" />
                        <Label
                            x:Name="CurrentStreakTitle"
                            Grid.Row="1"
                            Grid.Column="2"
                            FontSize="Micro"
                            HorizontalOptions="Center"
                            Text="Current Streak" />
                        <Label
                            x:Name="MaxStreakTitle"
                            Grid.Row="1"
                            Grid.Column="3"
                            FontSize="Micro"
                            HorizontalOptions="Center"
                            Text="Max Streak" />


                    </Grid>

                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Button
                            x:Name="PlayAgainButton"
                            BackgroundColor="GreenYellow"
                            BorderColor="Transparent"
                            Clicked="PlayAgainButton_Clicked"
                            FontSize="Small"
                            HeightRequest="50"
                            HorizontalOptions="Center"
                            IsVisible="{Binding PlayAgain}"
                            Text="Play Again"
                            TextColor="Black"
                            WidthRequest="150" />


                    </HorizontalStackLayout>


                </VerticalStackLayout>
            </Frame>


        </Grid>

        <!--  Hidden entry, is constantly refocused with a timer function to allow input  -->
        <!--  Guess complete function called on completion(Enter pressed)  -->
        <Entry
            x:Name="guessEntry"
            Completed="GuessEntry_Completed"
            MaxLength="5"
            Opacity="0"
            TextChanged="OnGuessChange"
            VerticalOptions="Center"
            WidthRequest="100" />
    </Grid>




</ContentPage>