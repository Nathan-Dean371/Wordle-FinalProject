<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Wordle_FinalProject.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{StaticResource PrimaryBackgroundColor}">

    <Grid
        HeightRequest="600"
        RowSpacing="50"
        WidthRequest="500">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Frame Grid.Row="0" BorderColor="Transparent">
            <Image Aspect="AspectFit" Source="wordle_logo.png" />
        </Frame>

        <Button
            Grid.Row="1"
            BackgroundColor="{StaticResource GreenButton}"
            Clicked="Start_Button_Clicked"
            FontSize="Medium"
            Text="Play"
            TextColor="Black" />


        <Button
            Grid.Row="2"
            BackgroundColor="{StaticResource BlueButton}"
            Clicked="Scores_Button_Clicked"
            FontSize="Medium"
            Text="Scores"
            TextColor="Black" />

        <Button
            Grid.Row="3"
            BackgroundColor="{StaticResource YellowButton}"
            Clicked="Settings_Button_Clicked"
            FontSize="Medium"
            Text="Settings"
            TextColor="Black" />




    </Grid>

</ContentPage>
