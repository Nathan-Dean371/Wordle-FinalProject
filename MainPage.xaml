<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Wordle_FinalProject.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid HeightRequest="600" WidthRequest="500" RowSpacing="50">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Frame Grid.Row="0" BorderColor="Transparent">
            <Image Aspect="AspectFit" Source="wordle_logo.png" />
        </Frame>

        <Button
            Grid.Row="1"
            BackgroundColor="Green"
            Clicked="Start_Button_Clicked"
            FontSize="Medium"
            Text="Play" />

        <Button
            Grid.Row="2"
            BackgroundColor="DeepSkyBlue"
            Clicked="Scores_Button_Clicked"
            FontSize="Medium"
            Text="Scores" />

        <Button
            Grid.Row="3"
            BackgroundColor="Yellow"
            Clicked="Settings_Button_Clicked"
            FontSize="Medium"
            Text="Settings" />




    </Grid>

</ContentPage>
